<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Crm stages -->
        <record model="crm.stage" id="new_stage">
            <field name="name">New</field>
            <field name="probability">0</field>
            <field name="on_change">1</field>
            <field name="sequence">1</field>
            <field name="type">both</field>
        </record>
        <record model="crm.stage" id="qualified_stage">
            <field name="name">Qualified</field>
            <field name="fold">1</field>
            <field name="probability">0</field>
            <field name="on_change">1</field>
            <field name="sequence">30</field>
            <field name="type">both</field>
        </record>
        <record model="crm.stage" id="quoted_stage">
            <field name="name">Quoted</field>
            <field name="probability">20</field>
            <field name="on_change">1</field>
            <field name="sequence">40</field>
            <field name="type">both</field>
        </record>
        <record model="crm.stage" id="accepted_stage">
            <field name="name">Accepted</field>
            <field name="probability">40</field>
            <field name="on_change">1</field>
            <field name="sequence">50</field>
            <field name="type">both</field>
        </record>
        <record model="crm.stage" id="rejected_stage">
            <field name="name">Rejected</field>
            <field name="probability">60</field>
            <field name="on_change">1</field>
            <field name="sequence">60</field>
            <field name="type">both</field>
        </record>
        
        
        <record model="crm.team" id="sales_team.team_sales_department">
            <field name="stage_ids" eval="[(4, ref('new_stage')), (4, ref('qualified_stage')),
                                            (4, ref('quoted_stage')), (4, ref('accepted_stage')),
                                            (4, ref('rejected_stage')),
                                            ]"/>
        </record>

    </data>
</odoo>
