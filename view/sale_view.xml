<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_for_sale_order_form" model="ir.ui.view">
            <field name="name">view.for.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="wcfmc_id"/>
                    <field name="vehicle_registration"/>
                    <field name="fuel"/>
                    <field name="make_model"/>
                    <field name="city"/>
                    <field name="transmission"/>
                    <field name="registration_year"/>
                    <field name="postcode"/>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="action_wcfmc_upload" string="Upload to WCFMC" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
