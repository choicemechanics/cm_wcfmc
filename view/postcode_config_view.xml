<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_postcode_config_settings" model="ir.ui.view">
            <field name="name">Postcode congfiguration settings</field>
            <field name="model">postcode.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Postcode" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Postcode Setting"/>
                    <group name="wcfmc_username">
                        <label for="id" string="Setting"/>
                        <div>
                            <div>
                                <field name="wcfmc_username" class="oe_inline"/>
                                <label for="wcfmc_username"/>
                            </div>
                            <div>
                                <field name="wcfmc_password" class="oe_inline"/>
                                <label for="wcfmc_password"/>  
                            </div>
                            <div>
                                <field name="runscope_auth_token" class="oe_inline" />
                                <label for="runscope_auth_token"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        
        
       <record id="action_postcode_config_settings" model="ir.actions.act_window">
            <field name="name">Configure Postcode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">postcode.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_postcode_config_settings" name="Postcode Setting" parent="base.menu_config"
            sequence="10" action="action_postcode_config_settings"/>
        
        
   </data>
</openerp>